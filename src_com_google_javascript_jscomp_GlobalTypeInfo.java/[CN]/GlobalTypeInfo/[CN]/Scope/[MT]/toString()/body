{
  StringBuilder sb=new StringBuilder();
  if (isTopLevel()) {
    sb.append("<TOP SCOPE>");
  }
 else {
    sb.append(getReadableName());
    sb.append('(');
    Joiner.on(',').appendTo(sb,formals);
    sb.append(')');
  }
  sb.append(" with root: ");
  sb.append(root.toString());
  return sb.toString();
}
