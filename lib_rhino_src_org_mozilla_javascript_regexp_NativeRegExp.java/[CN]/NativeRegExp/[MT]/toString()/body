{
  StringBuilder buf=new StringBuilder();
  buf.append('/');
  if (re.source.length != 0) {
    buf.append(re.source);
  }
 else {
    buf.append("(?:)");
  }
  buf.append('/');
  if ((re.flags & JSREG_GLOB) != 0)   buf.append('g');
  if ((re.flags & JSREG_FOLD) != 0)   buf.append('i');
  if ((re.flags & JSREG_MULTILINE) != 0)   buf.append('m');
  return buf.toString();
}
