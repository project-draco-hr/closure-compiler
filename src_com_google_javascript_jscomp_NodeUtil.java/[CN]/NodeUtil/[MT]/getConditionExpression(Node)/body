{
switch (n.getType()) {
case Token.IF:
case Token.WHILE:
    return n.getFirstChild();
case Token.DO:
  return n.getLastChild();
case Token.FOR:
return NodeUtil.isForIn(n) ? null : n.getSecondChild();
case Token.FOR_OF:
case Token.CASE:
return null;
}
throw new IllegalArgumentException(n + " does not have a condition.");
}
