{
  checkNotNull(moduleRoots);
  checkNotNull(inputs);
  checkNotNull(pathResolver);
  this.pathResolver=pathResolver;
  this.errorHandler=errorHandler;
  this.moduleRootPaths=createRootPaths(moduleRoots,pathResolver);
  this.modulePaths=resolvePaths(Iterables.transform(Iterables.transform(inputs,UNWRAP_DEPENDENCY_INFO),pathResolver),moduleRootPaths);
}
