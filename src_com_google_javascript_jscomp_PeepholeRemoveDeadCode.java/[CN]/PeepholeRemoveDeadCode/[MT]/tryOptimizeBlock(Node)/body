{
  for (Node c=n.getFirstChild(), prev=null; c != null; ) {
    Node next=c.getNext();
    if (!isUnremovableNode(c) && !mayHaveSideEffects(c)) {
      n.removeFirstOrChildAfter(prev);
      reportCodeChange();
    }
 else {
      prev=c;
      tryOptimizeConditionalAfterAssign(c);
    }
    c=next;
  }
  if (n.isSyntheticBlock() || n.isScript() || n.getParent() == null) {
    return n;
  }
  if (NodeUtil.tryMergeBlock(n)) {
    reportCodeChange();
    return null;
  }
  return n;
}
