{
  mode=LanguageMode.ECMASCRIPT6;
  parse("for (let x; x != 10; x = next()) {}");
  parse("for (let x; x != 10; x = next());");
  parse("for (let x = 0; x != 10; x++) {}");
  parse("for (let x = 0; x != 10; x++);");
  parseError("for (const x; x != 10; x = next()) {}","const variables must have an initializer");
  parseError("for (const x; x != 10; x = next());","const variables must have an initializer");
  parse("for (const x = 0; x != 10; x++) {}");
  parse("for (const x = 0; x != 10; x++);");
}
