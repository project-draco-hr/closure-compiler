{
  assertEarlyReferenceError(Joiner.on('\n').join("if (a) {","  x = 3;","  const x = 3;","}"));
  assertEarlyReferenceError(Joiner.on('\n').join("var x = 1;","if (true) {","  x++;","  const x = 3;","}"));
  assertEarlyReferenceError("a = 1; const a = 0;");
  assertEarlyReferenceError("a++; const a = 0;");
}
