{
  this.parser=parser;
  this.lineno=lineno;
  if (sourceReader != null) {
    if (sourceString != null)     Kit.codeBug();
    this.sourceReader=sourceReader;
    this.sourceBuffer=new char[512];
    this.sourceEnd=0;
  }
 else {
    if (sourceString == null)     Kit.codeBug();
    this.sourceString=sourceString;
    this.sourceEnd=sourceString.length();
  }
  this.sourceCursor=0;
}
