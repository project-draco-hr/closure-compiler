{
  if (b == null) {
    throw new NullPointerException();
  }
 else   if (off < 0 || len < 0 || len > b.length - off) {
    throw new IndexOutOfBoundsException();
  }
 else   if (len == 0) {
    return 0;
  }
  if (!ensureInput()) {
    return -1;
  }
  int n=Math.min(len,buffer.length - cursor);
  for (int i=0; i < n; ++i) {
    b[off + i]=buffer[cursor + i];
  }
  if (n < len) {
    b[off + n++]='\n';
  }
  cursor+=n;
  return n;
}
