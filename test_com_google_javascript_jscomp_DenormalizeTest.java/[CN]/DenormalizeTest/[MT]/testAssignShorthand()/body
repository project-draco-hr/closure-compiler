{
  test("x = x | 1;","x |= 1;");
  test("x = x ^ 1;","x ^= 1;");
  test("x = x & 1;","x &= 1;");
  test("x = x << 1;","x <<= 1;");
  test("x = x >> 1;","x >>= 1;");
  test("x = x >>> 1;","x >>>= 1;");
  test("x = x + 1;","x += 1;");
  test("x = x - 1;","x -= 1;");
  test("x = x * 1;","x *= 1;");
  test("x = x / 1;","x /= 1;");
  test("x = x % 1;","x %= 1;");
  test("/** @suppress {const} */ x = x + 1;","/** @suppress {const} */ x += 1;");
}
