{
  DiyFp v=asDiyFp(d64);
  boolean significand_is_zero=(v.f() == kHiddenBit);
  m_plus.setF((v.f() << 1) + 1);
  m_plus.setE(v.e() - 1);
  m_plus.normalize();
  if (significand_is_zero && v.e() != kDenormalExponent) {
    m_minus.setF((v.f() << 2) - 1);
    m_minus.setE(v.e() - 2);
  }
 else {
    m_minus.setF((v.f() << 1) - 1);
    m_minus.setE(v.e() - 1);
  }
  m_minus.setF(m_minus.f() << (m_minus.e() - m_plus.e()));
  m_minus.setE(m_plus.e());
}
