{
  if (node.isVar()) {
    Set<Node> nodesToRemove=Sets.newHashSet();
    for (    Node child : node.children()) {
      if ("x".equals(child.getString())) {
        nodesToRemove.add(child);
      }
    }
    for (    Node childToRemove : nodesToRemove) {
      node.removeChild(childToRemove);
      reportCodeChange();
    }
  }
  return node;
}
