{
  fold("x = 1 & 1","x = 1");
  fold("x = 1 & 2","x = 0");
  fold("x = 3 & 1","x = 1");
  fold("x = 3 & 3","x = 3");
  fold("x = 1 | 1","x = 1");
  fold("x = 1 | 2","x = 3");
  fold("x = 3 | 1","x = 3");
  fold("x = 3 | 3","x = 3");
  fold("x = -1 & 0","x = 0");
  fold("x = 0 & -1","x = 0");
  fold("x = 1 & 4","x = 0");
  fold("x = 2 & 3","x = 2");
  fold("x = 1 & 1.1","x = 1&1.1");
  fold("x = 1.1 & 1","x = 1.1&1");
  fold("x = 1 & 3000000000","x = 1&3000000000");
  fold("x = 3000000000 & 1","x = 3000000000&1");
  fold("x = 1 | 4","x = 5");
  fold("x = 1 | 3","x = 3");
  fold("x = 1 | 1.1","x = 1|1.1");
  fold("x = 1 | 3000000000","x = 1|3000000000");
}
