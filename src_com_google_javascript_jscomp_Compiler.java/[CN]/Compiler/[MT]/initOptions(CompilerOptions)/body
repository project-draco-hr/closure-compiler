{
  options_=options;
  if (errorManager == null) {
    if (outStream == null) {
      setErrorManager(new LoggerErrorManager(createMessageFormatter(),logger_));
    }
 else {
      PrintStreamErrorManager printer=new PrintStreamErrorManager(createMessageFormatter(),outStream);
      printer.setSummaryDetailLevel(options_.summaryDetailLevel);
      setErrorManager(printer);
    }
  }
}
