{
  this.options=options;
  this.languageMode=options.getLanguageIn();
  if (errorManager == null) {
    if (outStream == null) {
      setErrorManager(new LoggerErrorManager(createMessageFormatter(),logger));
    }
 else {
      PrintStreamErrorManager printer=new PrintStreamErrorManager(createMessageFormatter(),outStream);
      printer.setSummaryDetailLevel(options.summaryDetailLevel);
      setErrorManager(printer);
    }
  }
  reconcileOptionsWithGuards();
  this.warningsGuard=new ComposeWarningsGuard(new SuppressDocWarningsGuard(getDiagnosticGroups().getRegisteredGroups()),options.getWarningsGuard());
}
