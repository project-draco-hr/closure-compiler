{
  StringBuilder sb=new StringBuilder();
  sb.append(makeIndent(depth));
  sb.append("while (");
  sb.append(condition.toSource(0));
  sb.append(") ");
  if (body.getType() == Token.BLOCK) {
    sb.append(body.toSource(depth).trim());
    sb.append("\n");
  }
 else {
    sb.append("\n").append(body.toSource(depth + 1));
  }
  return sb.toString();
}
