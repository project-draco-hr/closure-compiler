{
  assertEqual(new VariableMap(ImmutableMap.of("x\ny","a")).toBytes(),"x\\ny:a\n".getBytes());
  assertEqual(new VariableMap(ImmutableMap.of("x:y","a")).toBytes(),"x\\:y:a\n".getBytes());
  assertEqual(new VariableMap(ImmutableMap.of("x\ny","a")).toBytes(),"x\\ny:a\n".getBytes());
  assertEqual(new VariableMap(ImmutableMap.of("x\\y","a")).toBytes(),"x\\\\y:a\n".getBytes());
  assertEqual(new VariableMap(ImmutableMap.of("\n","a")).toBytes(),"\\n:a\n".getBytes());
  assertEqual(new VariableMap(ImmutableMap.of(":","a")).toBytes(),"\\::a\n".getBytes());
  assertEqual(new VariableMap(ImmutableMap.of("\n","a")).toBytes(),"\\n:a\n".getBytes());
  assertEqual(new VariableMap(ImmutableMap.of("\\","a")).toBytes(),"\\\\:a\n".getBytes());
}
