{
  int lastIndex=str.length() - 1;
  StringBuffer buf=new StringBuffer(str.substring(0,lastIndex));
  buf.append("\\u");
  String hexCode=Integer.toHexString(str.charAt(lastIndex));
  for (int i=0; i < 4 - hexCode.length(); ++i) {
    buf.append('0');
  }
  buf.append(hexCode);
  return buf.toString();
}
