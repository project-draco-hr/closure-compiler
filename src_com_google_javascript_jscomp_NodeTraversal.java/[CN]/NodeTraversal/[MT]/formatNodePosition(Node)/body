{
  if (n == null) {
    return MISSING_SOURCE + "\n";
  }
  int lineNumber=n.getLineno();
  int columnNumber=n.getCharno();
  String src=compiler.getSourceLine(sourceName,lineNumber);
  if (src == null) {
    src=MISSING_SOURCE;
  }
  return sourceName + ":" + lineNumber+ ":"+ columnNumber+ "\n"+ src+ "\n";
}
