{
  Preconditions.checkState(curNode != null);
  Preconditions.checkState(node != null);
  compiler.setScope(node);
  scopeRoots.push(node);
  if (NodeUtil.isValidCfgRoot(node)) {
    cfgRoots.push(node);
    cfgs.push(null);
  }
  if (scopeCallback != null) {
    scopeCallback.enterScope(this);
  }
}
