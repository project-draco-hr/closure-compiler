{
  Context cx=Context.enter();
  try {
    cx.setOptimizationLevel(-1);
    Script script=cx.compileReader(new InputStreamReader(Bug482203Test.class.getResourceAsStream("Bug482203.js")),"",1,null);
    Scriptable scope=cx.initStandardObjects();
    cx.executeScriptWithContinuations(script,scope);
    int counter=0;
    for (; ; ) {
      Object cont=ScriptableObject.getProperty(scope,"c");
      if (cont == null) {
        break;
      }
      counter++;
      cx.resumeContinuation(cont,scope,null);
    }
    assertEquals(counter,5);
    assertEquals(Double.valueOf(3),ScriptableObject.getProperty(scope,"result"));
  }
  finally {
    Context.exit();
  }
}
