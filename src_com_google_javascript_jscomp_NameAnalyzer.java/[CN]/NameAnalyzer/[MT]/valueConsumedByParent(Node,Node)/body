{
  if (NodeUtil.isAssignmentOp(parent)) {
    return parent.getLastChild() == n;
  }
switch (parent.getType()) {
case Token.NAME:
case Token.RETURN:
    return true;
case Token.AND:
case Token.OR:
case Token.HOOK:
case Token.IF:
case Token.WHILE:
  return parent.getFirstChild() == n;
case Token.FOR:
return parent.getSecondChild() == n;
case Token.DO:
return parent.getLastChild() == n;
default :
return false;
}
}
