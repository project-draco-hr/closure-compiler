{
  for (Node c=n.getFirstChild(); c != null; ) {
    Node next=c.getNext();
    if (!NodeUtil.mayHaveSideEffects(c)) {
      n.removeChild(c);
      t.getCompiler().reportCodeChange();
    }
    c=next;
  }
  if (n.isSyntheticBlock() || parent == null) {
    return;
  }
  if (NodeUtil.tryMergeBlock(n)) {
    t.getCompiler().reportCodeChange();
  }
}
