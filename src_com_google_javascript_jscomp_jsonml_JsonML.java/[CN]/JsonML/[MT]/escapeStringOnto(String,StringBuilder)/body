{
  int pos=0, n=s.length();
  for (int i=0; i < n; ++i) {
    char ch=s.charAt(i);
switch (ch) {
case '\r':
case '\n':
case '"':
case '\\':
case '\u2028':
case '\u2029':
      String hex=Integer.toString(ch,16);
    sb.append(s,pos,i).append("\\u").append("0000",hex.length(),4).append(hex);
  pos=i + 1;
break;
}
}
sb.append(s,pos,n);
}
