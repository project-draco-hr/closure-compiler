{
  assertPrettyPrint("if(true) f();","if(true) {\n" + "  f()\n" + "}\n");
  assertPrettyPrint("if (true) { f() } else { g() }","if(true) {\n" + "  f()\n" + "}else {\n"+ "  g()\n"+ "}\n");
  assertPrettyPrint("if(true) f(); for(;;) g();","if(true) {\n" + "  f()\n" + "}\n"+ "for(;;) {\n"+ "  g()\n"+ "}\n");
}
