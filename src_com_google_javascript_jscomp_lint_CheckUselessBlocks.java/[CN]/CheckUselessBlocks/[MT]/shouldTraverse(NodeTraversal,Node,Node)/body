{
switch (n.getType()) {
case BLOCK:
    if (isLoneBlock(n)) {
      loneBlocks.push(n);
    }
  break;
case LET:
case CONST:
allowLoneBlock(parent);
break;
case CLASS:
if (NodeUtil.isClassDeclaration(n)) {
allowLoneBlock(parent);
}
break;
case FUNCTION:
if (NodeUtil.isFunctionDeclaration(n)) {
allowLoneBlock(parent);
}
break;
}
return true;
}
