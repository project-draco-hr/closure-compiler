{
  RhinoException e=new RhinoException(message);
  if (sourceName != null) {
    e.initSourceName(sourceName);
  }
  if (lineSource != null) {
    e.initLineSource(lineSource);
  }
  if (line > 0) {
    e.initLineNumber(line);
  }
  if (lineOffset > 0) {
    e.initColumnNumber(lineOffset);
  }
  return e.getMessage();
}
