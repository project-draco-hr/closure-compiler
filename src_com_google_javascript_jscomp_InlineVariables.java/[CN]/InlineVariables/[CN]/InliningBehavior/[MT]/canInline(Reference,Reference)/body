{
  if (!isValidDeclaration(declaration) || !isValidReference(reference)) {
    return false;
  }
  if (declaration.getBasicBlock() != reference.getBasicBlock()) {
    return false;
  }
  if (declaration.getNameNode().getFirstChild().getType() == Token.GETPROP && reference.getParent().getType() == Token.CALL) {
    return false;
  }
  return canMoveAggressively(declaration) || canMoveModerately(declaration,reference);
}
