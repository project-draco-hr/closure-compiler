{
  return new Matcher(){
    @Override public boolean matches(    Node node,    NodeMetadata metadata){
      if (!node.isAssign() || !node.getFirstChild().isGetProp() || !node.getFirstChild().getFirstChild().isThis()) {
        return false;
      }
      while (node != null && !node.isFunction()) {
        node=node.getParent();
      }
      if (node != null && node.isFunction()) {
        JSDocInfo jsDoc=NodeUtil.getBestJSDocInfo(node);
        if (jsDoc != null) {
          return jsDoc.isConstructor();
        }
      }
      return false;
    }
  }
;
}
